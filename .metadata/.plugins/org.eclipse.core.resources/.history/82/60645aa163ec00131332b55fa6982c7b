
import java.awt.*;
import java.applet.*;

public class Exercises extends Applet implements Runnable{	
	
	private Thread trigger;
	private int = 0;
	

	public void init(){
		
		trigger = null;
		
		
	}
	
	public void start(){
		
		
	}
	
	public void run(){
		
		for(;;){
			repaint();
			Thread.sleep(1000);
			
		}
		
	}
	
	
	public void paint(Graphics g){
		
		g.drawString("Lemuel", 20, 20);
		
	}
	
	public void stop(){
		
		
	}
	
	public void destroy(){
		
		
	}
	
	
}
