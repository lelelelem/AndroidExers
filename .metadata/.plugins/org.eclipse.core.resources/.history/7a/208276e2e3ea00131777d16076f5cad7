
import java.util.*;


public class Chapter5Class {

	private Scanner in = new Scanner(System.in);

	
	void getInputs(){
		int numArray[] = new int[10];
		int min=0, max=0;
		
		for(int x=0; x<10;numArray[x++]=in.nextInt()){
			System.out.println("\nInput a Number:");
			if (x==1||x==0){				
				min = max = numArray[0];
				System.out.print(max);
			}
			else{
				min = numArray[x-1]<min ? min:numArray[x];
				max = numArray[x-1]>max ? numArray[x]:max;
				System.out.print("Min is "+min+" while Max is "+numArray[x]);
			}	
		}
		
		
	}
	
	
}
