import java.io.*;
import java.util.Scanner;


public class Chapter10Class extends Files {

	private FileInputStream FSOriginal;
	private Scanner inOriginal;
	
	private FileWriter FSNew;
	private Scanner inNew;
	
	Chapter10Class()throws FileNotFoundException{
		
		FSOriginal = new FileInputStream(ReturnFileNameOriginal());
		inOriginal = new Scanner(FSOriginal);
		
		FSNew = new FileWriter(ReturnFileNameNew());
		inNew = new Scanner(FSNew);
		
	}
	
	void Read() throws IOException{
		
		while(inOriginal.hasNext()){
			
			char c = (char)inOriginal.nextByte();
			
			c = c==' '? '-':c;
			
			FSNew.write(c);
			
			
		}
		
		FSNew.close();
		FSOriginal.close();
		
	}
	
}
