
class Chapter12Class extends Thread {

	
	Chapter12Class(){
		start();
	}
	
	enum StopLight{
		
		Red(1000), Yellow(500), Green(1000);
	}
	
	public void run(){
		
		System.out.print("im running");
		
	}
	
	synchronized void ToRed() throws InterruptedException{
		wait();
		Thread.sleep(1000);		
		notify();
	}
	
	synchronized void ToYellow() throws InterruptedException{
		wait();
		Thread.sleep(500);
		notify();
	}
	
	synchronized void ToGreen() throws InterruptedException{
		wait();
		Thread.sleep(1000);
		notify();
	}
	
	
}
