
import java.awt.*;
import java.awt.geom.Ellipse2D;
import java.applet.*;

public class Exercises extends Applet implements Runnable{	
	
	private Thread trigger;
	private int i= 0;
	

	public void init(){
		
		trigger = null;
		
		
	}
	
	public void start(){
		
		trigger = new Thread(this);
		trigger.start();
	}
	
	public void run(){
		
		for(;;){
			i++;
			repaint();			
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}			
		}
		
	}
	
	
	public void paint(Graphics g){
		
		String number = Integer.toString(i);

		Graphics2D g2d = (Graphics2D)g;
		
		Ellipse2D.Double circle = new Ellipse2D.Double(10,10,10,10);
		
		g2d.draw(circle);
		
		
	}
	
	public void stop(){
		
		
	}
	
	public void destroy(){
		
		
	}
	
	
}
